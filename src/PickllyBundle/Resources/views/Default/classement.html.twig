{% extends 'base.html.twig' %}

{% block body %}
    {% set myVal = 0 %}
    <div class="container text-center">
        <h2>Classement Général - Décembre</h2>
        <p>Classement rénitialisé le 1er Janvier</p>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Rank</th>
                <th>Username</th>
                <th>Points</th>
            </tr>
            </thead>
            <tbody>
                    {% for ranked in user %}
                        {% set myVal = myVal + 1 %}
                    <tr>
                        <td>{{ myVal }}</td>
                        <td>{{ ranked.username }}</td>
                        <td>{{ ranked.points }}</td>
                    </tr>
                    {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

